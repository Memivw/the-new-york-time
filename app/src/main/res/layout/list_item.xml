<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10px"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/image_list"
            android:layout_width="54dp"
            android:layout_height="84dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_search_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="239dp"
            android:layout_toEndOf="@+id/image_list"
            android:fontFamily="@font/average"
            android:text="TextView"
            android:singleLine="false"
            android:lines="2"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/desc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_search_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="244dp"
            android:layout_toEndOf="@+id/image_list"
            android:ellipsize="end"
            android:fontFamily="@font/average"
            android:lines="3"
            android:maxLines="4"
            android:singleLine="false"
            android:text="TextView"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/by_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="267dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="7dp"
            android:layout_toEndOf="@+id/image_list"
            android:fontFamily="@font/average"
            android:text="TextView"
            android:singleLine="true"
            android:textSize="8sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>